<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <telenav.demo.app.widgets.OutsideEventLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/translucent_white"
        android:paddingBottom="@dimen/general_padding_large">

        <View
            android:id="@+id/separate_line"
            android:layout_width="26dp"
            android:layout_height="3dp"
            android:layout_marginTop="6dp"
            android:background="@color/blue_c1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/parking_filters_area_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="20dp"
            android:layout_marginTop="16dp"
            android:src="@drawable/ic_back"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/separate_line"
            app:tint="@color/blue_c1"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/filters_header"
            android:textSize="20sp"
            android:paddingLeft="12dp"
            android:textColor="@color/black_header"
            app:layout_constraintStart_toEndOf="@id/parking_filters_area_back"
            app:layout_constraintBottom_toBottomOf="@id/parking_filters_area_back" />

        <TextView
            android:id="@+id/open_now_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="@color/blue_c1"
            android:text="@string/open_now"
            android:layout_marginStart="20dp"
            android:layout_marginTop="33dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/parking_filters_area_back" />

        <CheckBox
            android:id="@+id/open_now"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:buttonTint="@color/telenav_indigo_mid_tone"
            android:layout_marginEnd="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/open_now_header"
            app:layout_constraintBottom_toBottomOf="@id/open_now_header" />

        <View
            android:id="@+id/separate_line1"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="26dp"
            android:background="@color/blue_c2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/open_now_header" />

        <TextView
            android:id="@+id/parking_time_start_from_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="@color/blue_c1"
            android:text="@string/parking_time_start_from"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/separate_line1" />

        <FrameLayout
            android:id="@+id/date_time_container"
            android:layout_width="200dp"
            android:layout_height="35dp"
            android:layout_marginTop="5dp"
            app:layout_constraintTop_toBottomOf="@id/parking_time_start_from_header"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <com.github.gzuliyujiang.wheelpicker.widget.DatimeWheelLayout
                android:id="@+id/date_time_picker"
                android:layout_width="200dp"
                android:layout_height="90dp"
                android:layout_gravity="center"
                app:wheel_indicatorEnabled="false"
                app:wheel_visibleItemCount="3"
                app:wheel_dateMode="month_day"
                app:wheel_timeMode="hour_24_no_second"
                app:wheel_hourLabel=":"
                app:layout_constraintTop_toBottomOf="@id/parking_time_start_from_header"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <View
                android:id="@+id/date_time_overlay"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </FrameLayout>

        <TextView
            android:id="@+id/parking_time_start_from_reset"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textColor="@color/blue_c1"
            android:text="@string/reset"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/parking_time_start_from_header" />

        <View
            android:id="@+id/separate_line2"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="18dp"
            android:background="@color/blue_c2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/date_time_container" />

        <TextView
            android:id="@+id/parking_duration_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="@color/blue_c1"
            android:text="@string/parking_duration"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/separate_line2" />

        <ImageView
            android:id="@+id/parking_duration_substract"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_remove_circle"
            android:layout_marginEnd="20dp"
            app:tint="@color/blue_c1"
            app:layout_constraintEnd_toStartOf="@+id/parking_duration"
            app:layout_constraintTop_toTopOf="@id/parking_duration"
            app:layout_constraintBottom_toBottomOf="@id/parking_duration"/>

        <TextView
            android:id="@+id/parking_duration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textColor="@android:color/black"
            android:layout_marginTop="9dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/parking_duration_header"
            tools:text="00:00 MN"/>

        <ImageView
            android:id="@+id/parking_duration_add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_add_circle"
            android:layout_marginStart="20dp"
            app:tint="@color/blue_c1"
            app:layout_constraintStart_toEndOf="@+id/parking_duration"
            app:layout_constraintTop_toTopOf="@id/parking_duration"
            app:layout_constraintBottom_toBottomOf="@id/parking_duration"/>

        <TextView
            android:id="@+id/parking_duration_reset"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textColor="@color/blue_c1"
            android:text="@string/reset"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/parking_duration_header" />

        <View
            android:id="@+id/separate_line4"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="22dp"
            android:background="@color/blue_c2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/parking_duration" />

        <TextView
            android:id="@+id/reservation_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="@color/blue_c1"
            android:text="@string/reservation"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/separate_line4" />

        <View
            android:id="@+id/separate_line5"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="26dp"
            android:background="@color/blue_c2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/reservation_header" />

        <CheckBox
            android:id="@+id/reservation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:buttonTint="@color/telenav_indigo_mid_tone"
            android:layout_marginEnd="12dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/reservation_header"
            app:layout_constraintBottom_toBottomOf="@id/reservation_header" />

        <TextView
            android:id="@+id/price_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="@color/blue_c1"
            android:text="@string/price"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/separate_line5" />

        <TextView
            android:id="@+id/price_reset"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textColor="@color/blue_c1"
            android:text="@string/reset"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/price_header" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="15dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/price_header">

            <RadioButton
                android:id="@+id/price_level_one_dollar"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:buttonTint="@color/telenav_indigo_mid_tone"
                android:text="@{@string/dollar}" />

            <RadioButton
                android:id="@+id/price_level_two_dollars"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:buttonTint="@color/telenav_indigo_mid_tone"
                android:text="@{@string/dollar+@string/dollar}" />

            <RadioButton
                android:id="@+id/price_level_three_dollars"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:buttonTint="@color/telenav_indigo_mid_tone"
                android:text="@{@string/dollar+@string/dollar+@string/dollar}" />

            <RadioButton
                android:id="@+id/price_level_four_dollars"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:buttonTint="@color/telenav_indigo_mid_tone"
                android:text="@{@string/dollar+@string/dollar+@string/dollar+@string/dollar}" />

        </LinearLayout>

    </telenav.demo.app.widgets.OutsideEventLayout>
</layout>