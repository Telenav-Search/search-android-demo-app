<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:android="http://schemas.android.com/apk/res/android">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        xmlns:tools="http://schemas.android.com/tools"
        android:color="@android:color/white"
        android:id="@+id/entity_root">

        <TextView
            android:id="@+id/entity_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="@color/black_c1"
            android:textStyle="bold"
            android:layout_marginStart="20dp"
            android:layout_marginTop="6dp"
            android:ellipsize="end"
            android:maxLines="1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Startbucks"/>

        <TextView
            android:id="@+id/entity_distance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="14dp"
            android:textColor="@android:color/black"
            android:textSize="14sp"
            app:layout_constraintTop_toTopOf="@+id/entity_name"
            app:layout_constraintEnd_toEndOf="parent"
            tools:text="1.1 mi"/>

        <FrameLayout
            android:id="@+id/frame_entity_additional_details"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/entity_name"
            app:layout_constraintStart_toStartOf="@id/entity_name"/>

        <LinearLayout
            android:id="@+id/entity_buttons"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="29dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/frame_entity_additional_details">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/entity_favorite"
                android:layout_width="0dp"
                android:layout_weight="0.5"
                android:layout_height="33dp"
                android:background="@drawable/button_round_white"
                android:layout_marginStart="19dp"
                android:layout_marginEnd="19dp"
                android:layout_marginBottom="4dp"
                android:drawableLeft="@drawable/ic_favorite_border"
                android:drawablePadding="-30dp"
                android:paddingStart="60dp"
                android:textColor="@color/blue_c1"
                android:textAllCaps="false"
                android:text="@string/favorite"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/entity_call"
                android:layout_width="0dp"
                android:layout_weight="0.5"
                android:layout_height="33dp"
                android:background="@drawable/button_round_white"
                android:layout_marginStart="19dp"
                android:layout_marginEnd="19dp"
                android:layout_marginBottom="4dp"
                android:drawableLeft="@drawable/ic_call"
                android:drawablePadding="-30dp"
                android:paddingStart="60dp"
                android:textColor="@color/blue_c1"
                android:textAllCaps="false"
                android:text="@string/call"/>
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>