<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@drawable/rounded_corners_background_big"
    android:gravity="center"
    android:padding="@dimen/bottom_sheet_corner_radius"
    android:layout_marginHorizontal="@dimen/padding_10"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dim_160">

    <LinearLayout
        android:id="@+id/poi_top_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:weightSum="5"
        android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/poi_header"
        android:paddingStart="@dimen/padding_10"
        android:layout_weight="4"
        android:layout_width="wrap_content"
        android:weightSum="2"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    <TextView
        android:id="@+id/poi_name"
        android:layout_width="match_parent"
        android:layout_height="@dimen/padding_0"
        android:layout_weight="2"
        android:maxLines="2"
        android:textColor="@android:color/white"
        android:textSize="20sp"
        android:text="Name" />


        <LinearLayout
            android:id="@+id/ratings_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="1"
            android:gravity="bottom"
            android:weightSum="8">


            <LinearLayout
                android:id="@+id/stars"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/padding_8"
                android:layout_weight="5"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/star_0"
                    android:layout_width="@dimen/padding_18"
                    android:layout_height="@dimen/padding_18"
                    android:layout_marginStart="@dimen/star_margin"
                    android:contentDescription="@null"
                    android:src="@drawable/ic_star_full"
                    app:tint="@android:color/white" />

                <ImageView
                    android:id="@+id/star_1"
                    android:layout_width="@dimen/padding_18"
                    android:layout_height="@dimen/padding_18"
                    android:layout_marginStart="@dimen/star_margin"
                    android:contentDescription="@null"
                    android:src="@drawable/ic_star_full"
                    app:tint="@android:color/white" />

                <ImageView
                    android:id="@+id/star_2"
                    android:layout_width="@dimen/padding_18"
                    android:layout_height="@dimen/padding_18"
                    android:layout_marginStart="@dimen/star_margin"
                    android:contentDescription="@null"
                    android:src="@drawable/ic_star_full"
                    app:tint="@android:color/white" />

                <ImageView
                    android:id="@+id/star_3"
                    android:layout_width="@dimen/padding_18"
                    android:layout_height="@dimen/padding_18"
                    android:layout_marginStart="@dimen/star_margin"
                    android:contentDescription="@null"
                    android:src="@drawable/ic_star_full"
                    app:tint="@android:color/white" />

                <ImageView
                    android:id="@+id/star_4"
                    android:layout_width="@dimen/padding_18"
                    android:layout_height="@dimen/padding_18"
                    android:layout_marginStart="@dimen/star_margin"
                    android:layout_marginEnd="@dimen/star_margin"
                    android:contentDescription="@null"
                    android:src="@drawable/ic_star_full"
                    app:tint="@android:color/white" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/price_level"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/padding_5"
                android:layout_weight="3"
                android:paddingStart="@dimen/padding_12"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/price_0"
                    android:layout_width="@dimen/padding_16"
                    android:layout_height="@dimen/padding_16"
                    android:contentDescription="@null"
                    android:src="@drawable/ic_dollar"
                    app:tint="@android:color/white" />

                <ImageView
                    android:id="@+id/price_1"
                    android:layout_width="@dimen/padding_16"
                    android:layout_height="@dimen/padding_16"
                    android:contentDescription="@null"
                    android:src="@drawable/ic_dollar"
                    app:tint="@android:color/white" />

                <ImageView
                    android:id="@+id/price_2"
                    android:layout_width="@dimen/padding_16"
                    android:layout_height="@dimen/padding_16"
                    android:contentDescription="@null"
                    android:src="@drawable/ic_dollar"
                    app:tint="@android:color/white" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_weight="1">

        <ImageView
            android:id="@+id/poi_icon"
            android:layout_width="@dimen/padding_40"
            android:layout_height="@dimen/padding_40"
            android:layout_marginStart="@dimen/padding_5"
            android:layout_marginEnd="@dimen/padding_5"
            android:background="@drawable/rounded_corners_background"
            android:backgroundTint="@color/telenav_yellow"
            android:padding="@dimen/bottom_sheet_top_padding"
            app:tint="@color/telenav_gray"
            android:src="@drawable/ic_coffee" />
        </LinearLayout>
    </LinearLayout>


    <TextView
        android:id="@+id/poi_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:maxLines="2"
        android:paddingStart="@dimen/padding_10"
        android:textColor="@android:color/white"
        android:layout_marginTop="@dimen/padding_5"
        android:text="Address" />

    <TextView
        android:id="@+id/poi_phone_no"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:paddingStart="@dimen/padding_10"
        android:paddingBottom="@dimen/padding_10"
        android:layout_marginTop="@dimen/padding_5"
        android:textColor="@android:color/white"
        android:text="Phone no." />

</LinearLayout>