<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/translucent_white"
        android:paddingBottom="@dimen/general_padding_large">

        <View
            android:id="@+id/separate_line"
            android:layout_width="26dp"
            android:layout_height="3dp"
            android:layout_marginTop="10dp"
            android:background="@color/blue_c1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/parking_filters_area_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="20dp"
            android:layout_marginTop="16dp"
            android:src="@drawable/ic_back"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/separate_line"
            app:tint="@color/blue_c1"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/filters_header"
            android:textSize="20sp"
            android:paddingLeft="12dp"
            android:textColor="@color/black_header"
            app:layout_constraintStart_toEndOf="@id/parking_filters_area_back"
            app:layout_constraintBottom_toBottomOf="@id/parking_filters_area_back" />

        <TextView
            android:id="@+id/rating_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="@color/blue_c1"
            android:text="@string/rating"
            android:layout_marginStart="20dp"
            android:layout_marginTop="31dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/parking_filters_area_back" />

        <TextView
            android:id="@+id/rating_reset"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="@color/blue_c1"
            android:text="@string/reset"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/rating_header" />

        <LinearLayout
            android:id="@+id/stars"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="20dp"
            android:layout_marginTop="@dimen/general_margin_medium"
            android:orientation="horizontal"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/rating_header">

            <ImageView
                android:id="@+id/star_0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/star_margin"
                android:layout_marginEnd="@dimen/star_margin"
                android:contentDescription="@null"
                android:src="@drawable/ic_star_full"
                app:tint="@color/start_yellow" />

            <ImageView
                android:id="@+id/star_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/star_margin"
                android:layout_marginEnd="@dimen/star_margin"
                android:contentDescription="@null"
                android:src="@drawable/ic_star_full"
                app:tint="@color/start_yellow" />

            <ImageView
                android:id="@+id/star_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/star_margin"
                android:layout_marginEnd="@dimen/star_margin"
                android:contentDescription="@null"
                android:src="@drawable/ic_star_full"
                app:tint="@color/start_yellow" />

            <ImageView
                android:id="@+id/star_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/star_margin"
                android:layout_marginEnd="@dimen/star_margin"
                android:contentDescription="@null"
                android:src="@drawable/ic_star_full"
                app:tint="@color/start_yellow" />

            <ImageView
                android:id="@+id/star_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/star_margin"
                android:layout_marginEnd="@dimen/star_margin"
                android:contentDescription="@null"
                android:src="@drawable/ic_star_full"
                app:tint="@color/start_yellow" />

        </LinearLayout>

        <TextView
            android:id="@+id/star_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="@color/black_c1"
            android:layout_marginStart="20dp"
            app:layout_constraintStart_toEndOf="@+id/stars"
            app:layout_constraintTop_toTopOf="@id/stars"
            app:layout_constraintBottom_toBottomOf="@id/stars"
            tools:text="1.0"/>

        <View
            android:id="@+id/separate_line1"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="23dp"
            android:background="@color/blue_c2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/stars" />

        <TextView
            android:id="@+id/price_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="@color/blue_c1"
            android:text="@string/price"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/separate_line1" />

        <TextView
            android:id="@+id/price_reset"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="@color/blue_c1"
            android:text="@string/reset"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/price_header" />

        <RadioGroup
            android:id="@+id/price_radio_group"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/price_header">

            <RadioButton
                android:id="@+id/price_level_one_dollar"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:buttonTint="@color/blue_c1"
                android:text="@{@string/dollar}" />

            <RadioButton
                android:id="@+id/price_level_two_dollars"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:buttonTint="@color/blue_c1"
                android:text="@{@string/dollar+@string/dollar}" />

            <RadioButton
                android:id="@+id/price_level_three_dollars"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:buttonTint="@color/blue_c1"
                android:text="@{@string/dollar+@string/dollar+@string/dollar}" />

            <RadioButton
                android:id="@+id/price_level_four_dollars"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:buttonTint="@color/blue_c1"
                android:text="@{@string/dollar+@string/dollar+@string/dollar+@string/dollar}" />

        </RadioGroup>

        <View
            android:id="@+id/separate_line2"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="23dp"
            android:background="@color/blue_c2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/price_radio_group" />

        <TextView
            android:id="@+id/open_now_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="@color/blue_c1"
            android:text="@string/open_now"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/separate_line2" />

        <CheckBox
            android:id="@+id/open_now"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20dp"
            android:buttonTint="@color/blue_c1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/open_now_header"
            app:layout_constraintBottom_toBottomOf="@id/open_now_header" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>