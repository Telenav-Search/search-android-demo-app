<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white">

        <View
            android:id="@+id/separate_line1"
            android:layout_width="26dp"
            android:layout_height="3dp"
            android:layout_marginTop="10dp"
            android:background="@color/blue_c1"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <ImageView
            android:id="@+id/personal_info_area_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="20dp"
            android:layout_marginTop="19dp"
            android:src="@drawable/ic_back"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/separate_line1"
            app:tint="@color/blue_c1"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/user_title"
            android:textSize="20sp"
            android:textStyle="bold"
            android:paddingLeft="12dp"
            android:textColor="@color/black_header"
            app:layout_constraintStart_toEndOf="@id/personal_info_area_back"
            app:layout_constraintBottom_toBottomOf="@id/personal_info_area_back" />

        <ImageView
            android:id="@+id/personal_info_ota"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="?android:attr/selectableItemBackground"
            android:paddingHorizontal="5dp"
            android:src="@drawable/ic_cloud_update"
            app:layout_constraintEnd_toStartOf="@id/settings"
            app:layout_constraintBottom_toBottomOf="@id/personal_info_area_back"
            app:tint="@color/blue_c1" />

        <ImageView
            android:id="@+id/settings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="?android:attr/selectableItemBackground"
            android:paddingLeft="10dp"
            android:paddingRight="20dp"
            android:src="@drawable/ic_settings"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/personal_info_ota"
            app:layout_constraintBottom_toBottomOf="@id/personal_info_ota"
            app:tint="@color/blue_c1"/>

        <TextView
            android:id="@+id/my_place"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="27dp"
            android:layout_marginStart="25dp"
            android:text="@string/my_place"
            android:textSize="14sp"
            android:textColor="@color/blue_c1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/personal_info_area_back" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/home_address_info"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="28dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/rounded_corners_background"
            android:backgroundTint="@color/grey_c2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/my_place">

            <ImageView
                android:id="@+id/home_address_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="12dp"
                android:paddingRight="14dp"
                android:src="@drawable/ic_home"
                app:tint="@color/blue_c1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

            <TextView
                android:id="@+id/home_address_header"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="12dp"
                android:text="@string/home"
                android:textSize="14sp"
                android:textColor="@color/blue_c1"
                app:layout_constraintStart_toEndOf="@+id/home_address_icon"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

            <TextView
                android:id="@+id/home_address"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:textColor="@color/black_c1"
                app:layout_constraintStart_toEndOf="@+id/home_address_header"
                app:layout_constraintEnd_toStartOf="@+id/home_address_configure"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                tools:text="29 Westheimer Rd. Santa Ana"/>

            <TextView
                android:id="@+id/home_address_configure"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="5dp"
                android:paddingEnd="20dp"
                android:textColor="@color/blue_c1"
                android:text="@string/edit"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/work_address_info"
            android:layout_width="match_parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/home_address_info"
            android:layout_height="48dp"
            android:layout_marginTop="28dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/rounded_corners_background"
            android:backgroundTint="@color/grey_c2">

            <ImageView
                android:id="@+id/work_address_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:paddingRight="12dp"
                android:src="@drawable/ic_work"
                app:tint="@color/blue_c1"
                android:layout_marginTop="3dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/work_address_header"/>

            <TextView
                android:id="@+id/work_address_header"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="12dp"
                android:text="@string/office"
                android:textSize="14sp"
                android:textColor="@color/blue_c1"
                app:layout_constraintStart_toEndOf="@+id/work_address_icon"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

            <TextView
                android:id="@+id/work_address"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:textColor="@color/black_c1"
                app:layout_constraintStart_toEndOf="@+id/work_address_header"
                app:layout_constraintEnd_toStartOf="@+id/work_address_configure"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                tools:text="29 Westheimer Rd. Santa Ana"/>

            <TextView
                android:id="@+id/work_address_configure"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="5dp"
                android:paddingEnd="20dp"
                android:textColor="@color/blue_c1"
                android:text="@string/edit"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <View
            android:id="@+id/separate_line"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_marginTop="20dp"
            android:background="@color/blue_c2"
            app:layout_constraintStart_toStartOf="@+id/work_address_info"
            app:layout_constraintEnd_toEndOf="@+id/work_address_info"
            app:layout_constraintTop_toBottomOf="@+id/work_address_info" />

        <TextView
            android:id="@+id/favorites"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="@string/favorites"
            android:textSize="14sp"
            android:textColor="@color/blue_c1"
            app:layout_constraintStart_toStartOf="@id/my_place"
            app:layout_constraintTop_toBottomOf="@+id/separate_line" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/personal_favorite_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_weight="1"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            app:layout_constraintTop_toBottomOf="@+id/favorites" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>