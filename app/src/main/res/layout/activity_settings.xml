<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@android:color/white"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/settings_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:paddingVertical="3dp"
            android:paddingLeft="10dp"
            android:src="@drawable/ic_back"
            app:tint="@color/blue_c1" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:paddingVertical="10dp"
            android:paddingLeft="10dp"
            android:textColor="@color/black_header"
            android:text="@string/settings"
            android:textSize="20sp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:background="@color/colorAccent" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/index_data_path"
                android:textColor="@color/blue_c1"
                android:textSize="14sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingVertical="10dp">

                <TextView
                    android:id="@+id/settings_index_data_path"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="@string/path"
                    android:textColor="@color/black_c1"
                    android:textColorHint="@color/black_c1"
                    android:textSize="12sp" />

                <Button
                    android:id="@+id/settings_select_index_data_path"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:backgroundTint="@color/grey_c2"
                    android:text="@string/browse"
                    android:textColor="@color/black_c1"
                    android:textSize="12sp"
                    android:textAllCaps="false"
                    android:fontFamily="sans-serif"
                    android:letterSpacing="0"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="@string/index_data_path_desc"
                    android:textColor="@color/grey_c3"
                    android:textSize="12sp" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/colorAccent" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingVertical="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/search_mode"
                    android:textColor="@color/blue_c1"
                    android:textSize="14sp" />

                <RadioGroup
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingVertical="10dp">

                    <RadioButton
                        android:id="@+id/settings_mode_hybrid"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Hybrid"
                        android:textSize="16sp"
                        android:layout_marginEnd="30dp"/>

                    <RadioButton
                        android:id="@+id/settings_mode_onboard"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Onboard"
                        android:textSize="16sp" />
                </RadioGroup>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/colorAccent" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingVertical="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/engine"
                    android:textColor="@color/blue_c1"
                    android:textSize="14sp" />

                <Spinner
                    android:id="@+id/engine_spinner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/setting_spinner_bg"
                    android:paddingHorizontal="10dp"
                    android:paddingVertical="8dp"
                    android:layout_marginVertical="10dp" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/colorAccent" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingVertical="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/select_environment"
                    android:textColor="@color/blue_c1"
                    android:textSize="14sp" />

                <Spinner
                    android:id="@+id/env_spinner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/setting_spinner_bg"
                    android:paddingHorizontal="10dp"
                    android:paddingVertical="8dp"
                    android:layout_marginTop="10dp" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/colorAccent" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingVertical="10dp">

                <TextView
                    android:id="@+id/cvp_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/cvp_location"
                    android:textColor="@color/blue_c1"
                    android:textSize="14sp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />

                <TextView
                    android:id="@+id/cvp_text"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="20dp"
                    android:paddingVertical="8dp"
                    android:hint="@string/same_gps"
                    android:textSize="14sp"
                    android:textColor="@color/blue_c1"
                    android:lines="1"
                    android:layout_marginEnd="14dp"
                    android:layout_marginVertical="10dp"
                    android:background="@drawable/setting_location_bg"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/cvp_label"
                    app:layout_constraintEnd_toStartOf="@id/cvp_quick_link"/>

                <Button
                    android:id="@+id/cvp_quick_link"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/quick_link"
                    android:textAllCaps="false"
                    android:textSize="12sp"
                    android:textColor="@color/black_c1"
                    android:fontFamily="sans-serif"
                    android:letterSpacing="0"
                    android:backgroundTint="@color/grey_c2"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBaseline_toBaselineOf="@id/cvp_text"
                    app:layout_constraintStart_toEndOf="@id/cvp_text"/>

                <ImageView
                    android:id="@+id/cvp_reset"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_location"
                    android:layout_marginEnd="5dp"
                    app:layout_constraintEnd_toEndOf="@id/cvp_text"
                    app:layout_constraintTop_toTopOf="@id/cvp_text"
                    app:layout_constraintBottom_toBottomOf="@id/cvp_text"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/colorAccent" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingVertical="10dp">

                <TextView
                    android:id="@+id/sal_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/search_area_location"
                    android:textColor="@color/blue_c1"
                    android:textSize="14sp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />

                <TextView
                    android:id="@+id/sal_text"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="20dp"
                    android:paddingVertical="8dp"
                    android:hint="@string/same_gps"
                    android:textSize="14sp"
                    android:textColor="@color/blue_c1"
                    android:lines="1"
                    android:layout_marginEnd="14dp"
                    android:layout_marginVertical="10dp"
                    android:background="@drawable/setting_location_bg"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/sal_label"
                    app:layout_constraintEnd_toStartOf="@id/sal_quick_link"/>

                <Button
                    android:id="@+id/sal_quick_link"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/quick_link"
                    android:textAllCaps="false"
                    android:textSize="12sp"
                    android:textColor="@color/black_c1"
                    android:fontFamily="sans-serif"
                    android:letterSpacing="0"
                    android:backgroundTint="@color/grey_c2"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBaseline_toBaselineOf="@id/sal_text"
                    app:layout_constraintStart_toEndOf="@id/sal_text"/>

                <ImageView
                    android:id="@+id/sal_reset"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_location"
                    android:layout_marginEnd="5dp"
                    app:layout_constraintEnd_toEndOf="@id/sal_text"
                    app:layout_constraintTop_toTopOf="@id/sal_text"
                    app:layout_constraintBottom_toBottomOf="@id/sal_text"/>

                <CheckBox
                    android:id="@+id/cvp_same_checkbox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:button="@null"
                    android:drawableEnd="?android:attr/listChoiceIndicatorMultiple"
                    android:textSize="14sp"
                    android:textColor="@color/blue_c1"
                    android:text="@string/cvp_same"
                    android:paddingRight="-7dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBaseline_toBaselineOf="@id/sal_label"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/colorAccent" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingVertical="10dp">

                <TextView
                    android:id="@+id/user_id_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/user_id"
                    android:textColor="@color/blue_c1"
                    android:textSize="14sp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />

                <TextView
                    android:id="@+id/user_id_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="20dp"
                    android:paddingVertical="8dp"
                    android:textSize="14sp"
                    android:textColor="@color/blue_c1"
                    android:lines="1"
                    android:layout_marginVertical="10dp"
                    android:background="@drawable/setting_location_bg"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/user_id_label" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>