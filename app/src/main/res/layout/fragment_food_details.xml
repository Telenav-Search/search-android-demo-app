<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="14dp"
        android:background="@color/grey_c2"
        android:id="@+id/entity_root">

        <LinearLayout
            android:id="@+id/entity_stars"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:paddingBottom="10dp"
            android:orientation="horizontal"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/star_0"
                android:layout_width="@dimen/padding_18"
                android:layout_height="@dimen/padding_18"
                android:layout_marginStart="@dimen/star_margin"
                android:contentDescription="@null"
                android:src="@drawable/ic_star_full"
                app:tint="@color/red_c1" />

            <ImageView
                android:id="@+id/star_1"
                android:layout_width="@dimen/padding_18"
                android:layout_height="@dimen/padding_18"
                android:layout_marginStart="@dimen/star_margin"
                android:contentDescription="@null"
                android:src="@drawable/ic_star_full"
                app:tint="@color/red_c1" />

            <ImageView
                android:id="@+id/star_2"
                android:layout_width="@dimen/padding_18"
                android:layout_height="@dimen/padding_18"
                android:layout_marginStart="@dimen/star_margin"
                android:contentDescription="@null"
                android:src="@drawable/ic_star_full"
                app:tint="@color/red_c1" />

            <ImageView
                android:id="@+id/star_3"
                android:layout_width="@dimen/padding_18"
                android:layout_height="@dimen/padding_18"
                android:layout_marginStart="@dimen/star_margin"
                android:contentDescription="@null"
                android:src="@drawable/ic_star_full"
                app:tint="@color/red_c1" />

            <ImageView
                android:id="@+id/star_4"
                android:layout_width="@dimen/padding_18"
                android:layout_height="@dimen/padding_18"
                android:layout_marginStart="@dimen/star_margin"
                android:layout_marginEnd="@dimen/star_margin"
                android:contentDescription="@null"
                android:src="@drawable/ic_star_full"
                app:tint="@color/red_c1" />
        </LinearLayout>

        <TextView
            android:id="@+id/entity_always_closed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            tools:text="Open"/>

        <TextView
            android:id="@+id/entity_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textColor="@color/black_c1"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="4dp"
            android:layout_marginBottom="4dp"
            android:ellipsize="end"
            android:maxLines="1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/entity_stars"
            tools:text="29 Westheimer Rd. Santa Ana"/>

        <TextView
            android:id="@+id/entity_open_hours_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="14dp"
            android:textColor="@color/grey_c3"
            android:textSize="12sp"
            android:text="@string/open_time"
            app:layout_constraintTop_toBottomOf="@+id/entity_address"
            app:layout_constraintStart_toStartOf="@+id/entity_address" />

        <TextView
            android:id="@+id/entity_open_hours"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginStart="6dp"
            android:textColor="@color/blue_c1"
            android:textSize="12sp"
            android:text="10:00 - 20:00"
            app:layout_constraintTop_toBottomOf="@+id/entity_address"
            app:layout_constraintStart_toEndOf="@+id/entity_open_hours_header" />

        <TextView
            android:id="@+id/entity_phone_number_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="14dp"
            android:textColor="@color/grey_c3"
            android:textSize="12sp"
            android:text="@string/phone_number"
            app:layout_constraintTop_toBottomOf="@+id/entity_open_hours"
            app:layout_constraintStart_toStartOf="@+id/entity_open_hours_header" />

        <TextView
            android:id="@+id/entity_phone_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="14dp"
            android:layout_marginStart="6dp"
            android:textColor="@color/blue_c1"
            android:textSize="12sp"
            android:text="@string/open_now"
            app:layout_constraintTop_toBottomOf="@+id/entity_open_hours"
            app:layout_constraintStart_toEndOf="@+id/entity_phone_number_header"
            tools:text="817-291-1293"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>