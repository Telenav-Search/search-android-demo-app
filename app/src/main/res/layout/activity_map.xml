<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/buttons_area"
        android:paddingVertical="@dimen/padding_5"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/app_personal_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toStartOf="@id/app_mode_select"
            android:background="?android:attr/selectableItemBackground"
            android:paddingHorizontal="5dp"
            android:src="@drawable/ic_places" />

        <ImageView
            android:id="@+id/app_mode_select"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:background="?android:attr/selectableItemBackground"
            android:paddingHorizontal="5dp"
            android:layout_marginEnd="@dimen/padding_5"
            android:src="@drawable/ic_settings" />
    </RelativeLayout>

    <FrameLayout
        android:id="@+id/map_fragment_frame"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/buttons_area"
        android:background="#eee" />

    <ImageView
        android:id="@+id/map_fragment_touch_iv"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_margin="15dp"
        android:src="@drawable/ic_touch"
        android:visibility="gone" />

    <TextView
        android:id="@+id/redo_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:layout_marginTop="50dp"
        android:layout_gravity="center_horizontal"
        android:visibility="gone"
        android:paddingVertical="5dp"
        android:paddingHorizontal="13dp"
        android:textColor="@color/blue"
        android:layout_centerHorizontal="true"
        android:background="@drawable/rec_blue"
        android:text="@string/redo_search_in_this_area" />

      <RelativeLayout
        android:id="@+id/top_navigation_panel"
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:background="@drawable/rounded_corners_background"
        android:backgroundTint="@android:color/white"
        android:layout_marginTop="42dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="60dp"
        android:visibility="gone"
        android:orientation="horizontal">

          <ImageView
              android:id="@+id/entity_details_back"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_centerVertical="true"
              android:paddingStart="20dp"
              android:src="@drawable/ic_back1"
              app:tint="@color/blue_c1" />

          <TextView
              android:id="@+id/navigation_header"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_centerVertical="true"
              android:layout_marginStart="20dp"
              android:textColor="@color/blue_c1"
              android:layout_toRightOf="@+id/entity_details_back" />

      </RelativeLayout>

    <telenav.demo.app.widgets.SearchButton
        android:id="@+id/fab_search"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/padding_10"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:clickable="true"
        android:focusable="true"
        android:visibility="gone"/>

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="visible">

        <include layout="@layout/view_bottom" />

    </androidx.coordinatorlayout.widget.CoordinatorLayout>

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/entity_details"
        android:visibility="gone">

        <include layout="@layout/view_entity_details_bottom" />

    </androidx.coordinatorlayout.widget.CoordinatorLayout>

</RelativeLayout>