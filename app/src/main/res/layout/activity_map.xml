<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <FrameLayout
        android:id="@+id/map_fragment_frame"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#eee" />

    <ImageView
        android:id="@+id/map_fragment_touch_iv"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_margin="15dp"
        android:src="@drawable/ic_touch"
        android:visibility="gone" />

      <RelativeLayout
        android:id="@+id/top_navigation_panel"
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:background="@drawable/rounded_corners_background"
        android:backgroundTint="@android:color/white"
        android:layout_marginTop="7.5dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="60dp"
        android:visibility="gone"
        android:orientation="horizontal">

          <ImageView
              android:id="@+id/entity_details_back"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:minWidth="46dp"
              android:minHeight="46dp"
              android:paddingStart="20dp"
              android:paddingEnd="20dp"
              android:scaleType="center"
              android:src="@drawable/ic_back"
              app:tint="@color/blue_c1" />

          <ImageView
              android:id="@+id/entity_header_clear"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_alignParentEnd="true"
              android:layout_marginEnd="10dp"
              android:minWidth="46dp"
              android:minHeight="46dp"
              android:paddingStart="20dp"
              android:paddingEnd="20dp"
              android:scaleType="center"
              android:src="@drawable/ic_clear" />

          <TextView
              android:id="@+id/navigation_header"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_centerVertical="true"
              android:layout_marginStart="20dp"
              android:textColor="@color/blue_c1"
              android:layout_toRightOf="@+id/entity_details_back" />

      </RelativeLayout>

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:id="@+id/view_bottom"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="visible">

        <include layout="@layout/view_bottom" />

    </androidx.coordinatorlayout.widget.CoordinatorLayout>

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:color="@color/grey_c2"
        android:id="@+id/entity_details"
        android:visibility="gone">

        <include layout="@layout/view_entity_details_bottom" />

    </androidx.coordinatorlayout.widget.CoordinatorLayout>

</RelativeLayout>