<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/grey_c2"
    android:id="@+id/entity_root"
    android:paddingTop="8dp"
    android:paddingBottom="20dp"
    app:behavior_hideable="false"
    app:behavior_peekHeight="82dp"
    app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior">

    <View
        android:id="@+id/separate_line"
        android:layout_width="26dp"
        android:layout_height="3dp"
        android:background="@color/blue_c1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <FrameLayout
        android:id="@+id/frame_entity_details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/separate_line"
        app:layout_constraintStart_toStartOf="@id/separate_line"/>

</androidx.constraintlayout.widget.ConstraintLayout>