<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bottom_layout_grey_shape"
    android:id="@+id/entity_root"
    android:paddingTop="8dp"
    android:paddingBottom="20dp"
    app:behavior_hideable="false"
    app:behavior_peekHeight="73dp"
    app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior">

    <include
        android:id="@+id/separate_line"
        layout="@layout/separate_line" />

    <FrameLayout
        android:id="@+id/frame_entity_details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/separate_line"
        app:layout_constraintStart_toStartOf="@id/separate_line"/>

</androidx.constraintlayout.widget.ConstraintLayout>